{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container-fluid">
            <div class="jumbotron bg-white">
                <h1 class="display-6">Companies</h1>
                {% for company in companies %}
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>{{ company.name }}</td>
                                <td>
                                    <ul class="nav justify-content-end">
                                        <li class="nav-item">
                                            <a href="{{ path('company_show', { 'id': company.id }) }}" class="btn btn-outline-info btn-md">show</a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="{{ path('company_edit', { 'id': company.id }) }}" class="btn btn-outline-info btn-md">edit</a> 
                                        </li>
                                    </ul>                          
                                </td>
                            </tr>                            
                        </tbody>
                    </table>                        
                {% endfor %}                   
                <a class="btn btn-info btn-md" href="{{ path('company_new') }}">Create a new company</a>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% form_theme form 'form_div_layout.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container-fluid">
            <div class="jumbotron bg-white">
                <h1 class="display-6">Stock creation</h1>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.companies) }}
                        {{ form_row(form.type) }}
                        {{ form_row(form.price) }}
                        {{ form_row(form.markets) }}
                    </div>
                    <input type="submit" class="btn btn-info" value="Create" />
                    <a class="btn btn-info btn-md" href="{{ path('stock_index') }}">Back to the list</a>
                {{ form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}

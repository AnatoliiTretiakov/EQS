{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container-fluid">
            <div class="jumbotron bg-white">
                <h1 class="display-6">Markets</h1>
                {% for market in markets %}
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>{{ market.name }}</td>
                                <td>
                                    <ul class="nav justify-content-end">
                                        <li class="nav-item">
                                            <a href="{{ path('market_show', { 'id': market.id }) }}" class="btn btn-outline-info btn-md">show</a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="{{ path('market_edit', { 'id': market.id }) }}" class="btn btn-outline-info btn-md">edit</a> 
                                        </li>
                                    </ul>                          
                                </td>
                            </tr>                            
                        </tbody>
                    </table>                        
                {% endfor %}                   
                <a class="btn btn-info btn-md" href="{{ path('market_new') }}">Create a new market</a>
            </div>
        </div>
    </div>
{% endblock %}
